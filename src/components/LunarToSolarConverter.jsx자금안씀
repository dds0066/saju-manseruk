    1938: [7, 30],   // 1938ë…„ ìœ¤7ì›” 30ì¼
    1936: [3, 30],   // 1936ë…„ ìœ¤3ì›” 30ì¼
    1933: [5, 30],   // 1933ë…„ ìœ¤5ì›” 30ì¼
    1930: [6, 29]    // 1930ë…„ ìœ¤6ì›” 29ì¼
  };

  // ì •í™•í•œ ìŒë ¥-ì–‘ë ¥ ë³€í™˜ í•¨ìˆ˜ (ì‹œê°„ëŒ€ ë¬¸ì œ í•´ê²°)
  const lunarToSolar = (lunarYear, lunarMonth, lunarDay, isLeapMonth = false) => {
    const baseDate = lunarNewYearDates[lunarYear];
    const monthDays = lunarMonthDays[lunarYear] || lunarMonthDays.default;
    const leapInfo = leapMonthInfo[lunarYear];

    if (!baseDate) {
      // ë²”ìœ„ë¥¼ ë²—ì–´ë‚œ ë…„ë„ëŠ” ê·¼ì‚¬ì¹˜ ê³„ì‚°
      const estimatedBase = new Date(lunarYear, 1, 15);
      let totalDays = 0;
      
      for (let i = 1; i < lunarMonth; i++) {
        totalDays += (monthDays[i - 1] || 29);
      }
      
      if (isLeapMonth && leapInfo && lunarMonth === leapInfo[0]) {
        totalDays += leapInfo[1];
      } else if (leapInfo && lunarMonth > leapInfo[0]) {
        totalDays += leapInfo[1];
      }
      
      totalDays += lunarDay - 1;

      // ì‹œê°„ëŒ€ ë¬¸ì œ í•´ê²°: ë¡œì»¬ ì‹œê°„ ê¸°ì¤€ìœ¼ë¡œ ëª…ì‹œì  ê³„ì‚°
      const resultDate = new Date(estimatedBase.getFullYear(), estimatedBase.getMonth(), estimatedBase.getDate() + totalDays);
      
      return {
        year: resultDate.getFullYear(),
        month: resultDate.getMonth() + 1,
        day: resultDate.getDate(),
        isApproximate: true
      };
    }

    // ì •í™•í•œ ê³„ì‚°
    let totalDays = 0;
    
    // í•´ë‹¹ ì›”ê¹Œì§€ì˜ ëˆ„ì  ì¼ìˆ˜ ê³„ì‚°
    for (let i = 1; i < lunarMonth; i++) {
      totalDays += monthDays[i - 1];
    }
    
    // ìœ¤ë‹¬ ì²˜ë¦¬
    if (isLeapMonth && leapInfo && lunarMonth === leapInfo[0]) {
      // í˜„ì¬ ì…ë ¥í•œ ë‹¬ì´ ìœ¤ë‹¬ì¸ ê²½ìš°
      totalDays += monthDays[lunarMonth - 1]; // í‰ë‹¬ ì¼ìˆ˜ ë¨¼ì € ë”í•˜ê³ 
      totalDays += lunarDay - 1; // ìœ¤ë‹¬ì—ì„œì˜ ì¼ìˆ˜
    } else {
      // ì¼ë°˜ì ì¸ ê²½ìš°
      if (leapInfo && lunarMonth > leapInfo[0]) {
        // ì…ë ¥í•œ ë‹¬ì´ ìœ¤ë‹¬ë³´ë‹¤ ë’¤ì— ìˆëŠ” ê²½ìš° ìœ¤ë‹¬ ì¼ìˆ˜ ì¶”ê°€
        totalDays += leapInfo[1];
      }
      totalDays += lunarDay - 1;
    }

    // ì‹œê°„ëŒ€ ë¬¸ì œ í•´ê²°: ë¡œì»¬ ì‹œê°„ ê¸°ì¤€ìœ¼ë¡œ ëª…ì‹œì  ê³„ì‚°
    const resultDate = new Date(baseDate.getFullYear(), baseDate.getMonth(), baseDate.getDate() + totalDays);

    return {
      year: resultDate.getFullYear(),
      month: resultDate.getMonth() + 1,
      day: resultDate.getDate(),
      isApproximate: false
    };
  };

  const handleConvert = () => {
    if (!lunarData.year || !lunarData.month || !lunarData.day) {
      alert('ìŒë ¥ ë…„, ì›”, ì¼ì„ ëª¨ë‘ ì…ë ¥í•´ì£¼ì„¸ìš”.');
      return;
    }

    const year = parseInt(lunarData.year);
    const month = parseInt(lunarData.month);
    const day = parseInt(lunarData.day);
    const hour = parseInt(lunarData.hour);
    const minute = parseInt(lunarData.minute);

    if (year < 1930 || year > 2040) {
      alert('1930ë…„~2040ë…„ ë²”ìœ„ì—ì„œ ë³€í™˜ ê°€ëŠ¥í•©ë‹ˆë‹¤.');
      return;
    }

    if (month < 1 || month > 12 || day < 1 || day > 30) {
      alert('ì˜¬ë°”ë¥¸ ìŒë ¥ ë‚ ì§œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
      return;
    }

    // ìœ¤ë‹¬ ìœ íš¨ì„± ê²€ì‚¬
    const leapInfo = leapMonthInfo[year];
    if (lunarData.isLeapMonth && (!leapInfo || month !== leapInfo[0])) {
      alert(`${year}ë…„ì—ëŠ” ${month}ì›” ìœ¤ë‹¬ì´ ì—†ìŠµë‹ˆë‹¤.`);
      return;
    }

    // í•´ë‹¹ ì›”ì˜ ìµœëŒ€ ì¼ìˆ˜ ê²€ì‚¬
    const monthDaysArray = lunarMonthDays[year];
    if (monthDaysArray) {
      let maxDays;
      if (lunarData.isLeapMonth && leapInfo && month === leapInfo[0]) {
        maxDays = leapInfo[1]; // ìœ¤ë‹¬ ì¼ìˆ˜
      } else {
        maxDays = monthDaysArray[month - 1]; // í•´ë‹¹ ì›” ì¼ìˆ˜
      }
      
      if (day > maxDays) {
        alert(`${year}ë…„ ${lunarData.isLeapMonth ? 'ìœ¤' : ''}${month}ì›”ì€ ${maxDays}ì¼ê¹Œì§€ ìˆìŠµë‹ˆë‹¤.`);
        return;
      }
    }

    setIsConverting(true);
    
    setTimeout(() => {
      try {
        const result = lunarToSolar(year, month, day, lunarData.isLeapMonth);
        const resultWithTime = {
          ...result,
          hour,
          minute,
          originalLunar: { ...lunarData, year, month, day }
        };
        
        setConvertedResult(resultWithTime);
        setIsConverting(false);
      } catch (error) {
        console.error('ë³€í™˜ ì˜¤ë¥˜:', error);
        alert('ë³€í™˜ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
        setIsConverting(false);
      }
    }, 500);
  };

  const handleApply = () => {
    if (convertedResult && onConvert) {
      onConvert(convertedResult);
    }
  };

  const handleChange = (field, value) => {
    setLunarData(prev => ({
      ...prev,
      [field]: value
    }));
    // ë³€í™˜ ê²°ê³¼ ì´ˆê¸°í™”
    if (convertedResult) {
      setConvertedResult(null);
    }
  };

  // í˜„ì¬ ë…„ë„ì˜ ìœ¤ë‹¬ ì •ë³´ í‘œì‹œ
  const getCurrentYearLeapInfo = () => {
    const year = parseInt(lunarData.year);
    const leapInfo = leapMonthInfo[year];
    if (leapInfo) {
      return `${year}ë…„ì—ëŠ” ${leapInfo[0]}ì›”ì´ ìœ¤ë‹¬ì…ë‹ˆë‹¤ (${leapInfo[1]}ì¼)`;
    }
    return `${year}ë…„ì—ëŠ” ìœ¤ë‹¬ì´ ì—†ìŠµë‹ˆë‹¤.`;
  };

  return (
    <div className="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center p-4 z-50">
      <div className="bg-white rounded-2xl shadow-2xl w-full max-w-lg max-h-[90vh] overflow-y-auto">
        {/* í—¤ë” */}
        <div className="bg-gradient-to-r from-purple-600 to-pink-600 text-white p-6 rounded-t-2xl">
          <div className="flex items-center justify-between">
            <div>
              <h2 className="text-xl font-bold flex items-center gap-2">
                ğŸŒ™ ìŒë ¥ â†’ ì–‘ë ¥ ë³€í™˜ê¸°
              </h2>
              <p className="text-white/80 text-sm mt-1">í•œêµ­ì²œë¬¸ì—°êµ¬ì› ë°ì´í„° ê¸°ë°˜ ì •í™•í•œ ë³€í™˜</p>
            </div>
            <button
              onClick={onClose}
              className="p-2 hover:bg-white/20 rounded-lg transition-colors"
            >
              <X size={20} />
            </button>
          </div>
        </div>

        {/* ë‚´ìš© */}
        <div className="p-6 space-y-6">
          {/* ìŒë ¥ ì…ë ¥ */}
          <div className="space-y-4">
            <h3 className="font-bold text-gray-800 flex items-center gap-2">
              <Calendar className="text-purple-600" size={18} />
              ìŒë ¥ ìƒë…„ì›”ì¼ì‹œ ì…ë ¥
            </h3>

            {/* ìŒë ¥ ë…„ì›”ì¼ */}
            <div className="grid grid-cols-3 gap-3">
              <div>
                <label className="block text-sm font-medium text-gray-600 mb-1">ë…„</label>
                <input
                  type="number"
                  placeholder="1967"
                  value={lunarData.year}
                  onChange={(e) => handleChange('year', e.target.value)}
                  className="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-400"
                  min="1930"
                  max="2040"
                />
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-600 mb-1">ì›”</label>
                <input
                  type="number"
                  placeholder="1"
                  value={lunarData.month}
                  onChange={(e) => handleChange('month', e.target.value)}
                  className="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-400"
                  min="1"
                  max="12"
                />
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-600 mb-1">ì¼</label>
                <input
                  type="number"
                  placeholder="1"
                  value={lunarData.day}
                  onChange={(e) => handleChange('day', e.target.value)}
                  className="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-400"
                  min="1"
                  max="30"
                />
              </div>
            </div>

            {/* ìœ¤ë‹¬ ì²´í¬ë°•ìŠ¤ */}
            <div className="bg-blue-50 rounded-lg p-3">
              <div className="flex items-center gap-3 mb-2">
                <input
                  type="checkbox"
                  id="isLeapMonth"
                  checked={lunarData.isLeapMonth}
                  onChange={(e) => handleChange('isLeapMonth', e.target.checked)}
                  className="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500"
                />
                <label htmlFor="isLeapMonth" className="text-sm font-medium text-gray-700">
                  ìœ¤ë‹¬ì…ë‹ˆë‹¤ (ì˜ˆ: ìœ¤4ì›”)
                </label>
              </div>
              {lunarData.year && (
                <p className="text-xs text-blue-600">
                  {getCurrentYearLeapInfo()}
                </p>
              )}
            </div>

            {/* ìŒë ¥ ì‹œê°„ */}
            <div className="grid grid-cols-2 gap-3">
              <div>
                <label className="block text-sm font-medium text-gray-600 mb-1">
                  <Clock size={16} className="inline mr-1" />
                  ì‹œ
                </label>
                <select
                  value={lunarData.hour}
                  onChange={(e) => handleChange('hour', e.target.value)}
                  className="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-400"
                >
                  {Array.from({ length: 24 }, (_, i) => (
                    <option key={i} value={i.toString().padStart(2, '0')}>
                      {i.toString().padStart(2, '0')}ì‹œ
                    </option>
                  ))}
                </select>
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-600 mb-1">ë¶„</label>
                <select
                  value={lunarData.minute}
                  onChange={(e) => handleChange('minute', e.target.value)}
                  className="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-400"
                >
                  {Array.from({ length: 60 }, (_, i) => (
                    <option key={i} value={i.toString().padStart(2, '0')}>
                      {i.toString().padStart(2, '0')}ë¶„
                    </option>
                  ))}
                </select>
              </div>
            </div>
          </div>

          {/* ë³€í™˜ ë²„íŠ¼ */}
          <button
            onClick={handleConvert}
            disabled={isConverting}
            className="w-full bg-gradient-to-r from-purple-600 to-pink-600 text-white py-3 px-6 rounded-lg font-bold hover:from-purple-700 hover:to-pink-700 transition-all flex items-center justify-center gap-2 disabled:opacity-50"
          >
            {isConverting ? (
              <>
                <div className="animate-spin rounded-full h-5 w-5 border-b-2 border-white"></div>
                ë³€í™˜ ì¤‘...
              </>
            ) : (
              <>
                <ArrowRight size={18} />
                ì–‘ë ¥ìœ¼ë¡œ ë³€í™˜í•˜ê¸°
              </>
            )}
          </button>

          {/* ë³€í™˜ ê²°ê³¼ */}
          {convertedResult && (
            <div className="bg-green-50 border border-green-200 rounded-lg p-4">
              <h4 className="font-bold text-green-800 mb-3 flex items-center gap-2">
                <CheckCircle className="text-green-600" size={18} />
                ë³€í™˜ ê²°ê³¼ (ì–‘ë ¥)
              </h4>
              
              <div className="space-y-3 mb-4">
                <div className="bg-white rounded-lg p-4 border border-green-200 shadow-sm">
                  <div className="text-center">
                    <div className="text-2xl font-bold text-gray-800 mb-1">
                      {convertedResult.year}ë…„ {convertedResult.month}ì›” {convertedResult.day}ì¼
                    </div>
                    <div className="text-lg text-gray-600">
                      {convertedResult.hour.toString().padStart(2, '0')}ì‹œ {convertedResult.minute.toString().padStart(2, '0')}ë¶„
                    </div>
                  </div>
                </div>
                
                <div className="grid grid-cols-2 gap-3 text-sm">
                  <div className="bg-white rounded-lg p-3 border border-green-100">
                    <span className="text-green-600 font-medium">ì›ë³¸ ìŒë ¥:</span>
                    <div className="text-gray-700 mt-1">
                      {convertedResult.originalLunar.year}ë…„ {convertedResult.originalLunar.month}ì›” {convertedResult.originalLunar.day}ì¼
                      {convertedResult.originalLunar.isLeapMonth && ' (ìœ¤ë‹¬)'}
                    </div>
                  </div>
                  <div className="bg-white rounded-lg p-3 border border-green-100">
                    <span className="text-green-600 font-medium">ì •í™•ë„:</span>
                    <div className="text-gray-700 mt-1">
                      {convertedResult.isApproximate ? 'ê·¼ì‚¬ì¹˜' : 'ì •í™•'}
                    </div>
                  </div>
                </div>
                
                {convertedResult.isApproximate && (
                  <div className="flex items-center gap-2 text-amber-600 bg-amber-50 rounded-lg p-3 border border-amber-200">
                    <AlertCircle size={16} />
                    <span className="text-sm">
                      1930-2040ë…„ ë²”ìœ„ ë°–ì´ë¯€ë¡œ ê·¼ì‚¬ì¹˜ì…ë‹ˆë‹¤. 1-2ì¼ ì˜¤ì°¨ê°€ ìˆì„ ìˆ˜ ìˆìŠµë‹ˆë‹¤.
                    </span>
                  </div>
                )}
              </div>

              <button
                onClick={handleApply}
                className="w-full bg-green-600 text-white py-3 px-4 rounded-lg font-bold hover:bg-green-700 transition-all flex items-center justify-center gap-2"
              >
                <CheckCircle size={18} />
                âœ… ì´ ì–‘ë ¥ ë‚ ì§œë¡œ ì‚¬ì£¼ ë³´ê¸°
              </button>
            </div>
          )}

          {/* ì•ˆë‚´ì‚¬í•­ */}
          <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <h5 className="font-bold text-blue-800 mb-2">ğŸ“‹ ë³€í™˜ ì•ˆë‚´</h5>
            <div className="space-y-1 text-sm text-blue-700">
              <p>â€¢ <strong>ì •í™•í•œ ë³€í™˜:</strong> 1930ë…„~2040ë…„ (í•œêµ­ì²œë¬¸ì—°êµ¬ì› ë°ì´í„° ê¸°ë°˜)</p>
              <p>â€¢ <strong>ê·¼ì‚¬ì¹˜ ë³€í™˜:</strong> ê·¸ ì™¸ ë…„ë„ (1-2ì¼ ì˜¤ì°¨ ê°€ëŠ¥)</p>
              <p>â€¢ <strong>ìœ¤ë‹¬:</strong> ìŒë ¥ì—ì„œ ê°™ì€ ë‹¬ì´ ë‘ ë²ˆ ìˆëŠ” ê²½ìš° ì²´í¬í•˜ì„¸ìš”</p>
              <p>â€¢ <strong>ì‹œê°„:</strong> ìŒë ¥ ê¸°ì¤€ ì‹œê°„ì„ ì…ë ¥í•˜ë©´ ê·¸ëŒ€ë¡œ ì–‘ë ¥ì— ì ìš©ë©ë‹ˆë‹¤</p>
            </div>
          </div>

          {/* ì£¼ìš” ìœ¤ë‹¬ ì •ë³´ */}
          <div className="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <h5 className="font-bold text-gray-800 mb-2">ğŸŒ™ ì£¼ìš” ìœ¤ë‹¬ ì •ë³´</h5>
            <div className="grid grid-cols-2 gap-2 text-xs text-gray-600">
              <div>2039ë…„: ìœ¤5ì›”</div>
              <div>2036ë…„: ìœ¤6ì›”</div>
              <div>2033ë…„: ìœ¤7ì›”</div>
              <div>2031ë…„: ìœ¤3ì›”</div>
              <div>2028ë…„: ìœ¤5ì›”</div>
              <div>2025ë…„: ìœ¤6ì›”</div>
              <div>2023ë…„: ìœ¤2ì›”</div>
              <div>2020ë…„: ìœ¤4ì›”</div>
              <div>2017ë…„: ìœ¤5ì›”</div>
              <div>2014ë…„: ìœ¤9ì›”</div>
              <div>2012ë…„: ìœ¤3ì›”</div>
              <div>2009ë…„: ìœ¤5ì›”</div>
              <div>2006ë…„: ìœ¤7ì›”</div>
              <div>2004ë…„: ìœ¤2ì›”</div>
              <div>2001ë…„: ìœ¤4ì›”</div>
              <div>1998ë…„: ìœ¤5ì›”</div>
              <div>1995ë…„: ìœ¤8ì›”</div>
              <div>1993ë…„: ìœ¤3ì›”</div>
              <div>1990ë…„: ìœ¤5ì›”</div>
              <div>1987ë…„: ìœ¤6ì›”</div>
